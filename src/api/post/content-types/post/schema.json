{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "shortDescriptionCover": {
      "type": "string",
      "required": true,
      "minLength": 5
    },
    "hashtags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::hashtag.hashtag",
      "mappedBy": "posts"
    },
    "titleToCover": {
      "type": "string",
      "minLength": 2,
      "required": true
    },
    "postTemplate": {
      "type": "dynamiczone",
      "components": [
        "single-image.single-image",
        "couple-images.couple-images",
        "content.content",
        "title.title"
      ]
    }
  }
}
